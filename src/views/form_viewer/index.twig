{% extends 'base.twig' %}
{% block title %}{{ __('Forms') }}{% endblock %}
{% block breadcrumb %}
    <div class="row mb-2">
        <div class="col-md-12">
            <nav aria-label="breadcrumb" data-bs-theme="{{ WEBSITE.mode }}">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ BASE_URL }}/"><i class="fa fa-home"></i></a></li>
                    <li class="breadcrumb-item active">{{ __('Forms') }}</li>
                </ol>
            </nav>
        </div>
    </div>
{% endblock %}
{% block content %}
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h3>{{ __('Forms') }}
                    {% if (toegang) %}
                        <a class="btn btn-sm btn-outline-light" href="{{ BASE_URL }}/form-viewer/settings">
                            <i class="fa-solid fa-sliders"></i>
                        </a>
                    {% endif %}
                </h3>
            </div>
        </div>
    </div>
{% endblock %}