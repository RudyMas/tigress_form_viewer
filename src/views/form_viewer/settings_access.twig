<div class="row">
    <div class="col-sm-12">
        <fieldset>
            <div class="row">
                <div class="form-group col-sm-12">
                    <div class="row mb-2">
                        <div class="col-sm-8">
                            <p><b>{{ __('Following people have administrative rights') }}:</b></p>
                        </div>
                        <div class="col-sm-4 text-end">
                            <button type="button" class="btn btn-success" data-bs-toggle="modal"
                                    data-bs-target="#ModalAddUser"><i class="fa-solid fa-plus"></i> {{ __('Add') }}
                            </button>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-12 table-responsive">
                            <table id="datatableTigress" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th style="width: 5%">{{ __('ID') }}</th>
                                    <th>{{ __('Name') }}</th>
                                    <th style="width: 5%" class="text-center">{{ __('Actions') }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in usersAccess %}
                                    <tr>
                                        <td class="text-middle">{{ user.id }}</td>
                                        <td class="text-middle">{{ user.first_name }} {{ user.last_name }}</td>
                                        <td class="text-center">
                                            <button type="button" class="btn btn-sm btn-danger open-modal"
                                                    data-bs-toggle="modal" data-bs-target="#ModalRemoveUser"
                                                    data-id="{{ user.id }}" data-toggle="tooltip"
                                                    title="{{ __('Deleting') }}">
                                                <i class="fa fa-fw fa-trash" aria-hidden="true"></i>
                                            </button>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
</div>

{# Modal Adding User #}
<form action="{{ BASE_URL }}/form-viewer/settings/add/user-access" method="post" enctype="multipart/form-data">
    <div class="modal fade" id="ModalAddUser" tabindex="-1" aria-labelledby="ModalAddUserLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalAddUserLabel">{{ __('Adding administrative user') }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="{{ __('Close') }}"></button>
                </div>
                <div class="modal-body">
                    <div class="container col-md-12">
                        <label for="user_id"><b>{{ __('User') }}:</b></label>
                        <select class="form-control" name="user_id" id="user_id">
                            <option value="">{{ __('Select a user') }}</option>
                            {% for user in allUsers %}
                                {% if user.id not in accessArray %}
                                    <option value="{{ user.id }}">{{ user.first_name }} {{ user.last_name }}
                                        ({{ user.id }})
                                    </option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button name="NewUser" value="1" type="submit" class="btn btn-success">{{ __('Save') }}</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">{{ __('Cancel') }}</button>
                </div>
            </div>
        </div>
    </div>
</form>

{# Modal Remove User #}
<form action="{{ BASE_URL }}/form-viewer/settings/remove/user-access" method="post" enctype="multipart/form-data">
    <div class="modal fade" id="ModalRemoveUser" tabindex="-1" aria-labelledby="modalTitle"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">{{ __('Removing administrative user') }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="{{ __('Close') }}"></button>
                </div>
                <div class="modal-body">
                    <p id="modalContent">{{ __('Are you sure you want to remove the user?') }}</p>
                </div>
                <div class="modal-footer">
                    <button id="RemoveUser" name="RemoveUser" value="" type="submit"
                            class="btn btn-success">{{ __('Yes') }}
                    </button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">{{ __('No') }}</button>
                </div>
            </div>
        </div>
    </div>
</form>